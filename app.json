{
  "expo": {
    "name": "ProjectCradle",
    "slug": "ProjectCradle",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "projectcradle",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.projectcradle",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow ProjectCradle to access your photos to save baby milestones.",
        "NSCameraUsageDescription": "Allow ProjectCradle to use the camera to capture memories."
      }
    },
    "android": {
      "package": "com.yourname.projectcradle",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-community/datetimepicker",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ProjectCradle to access your photos to save baby milestones.",
          "cameraPermission": "Allow ProjectCradle to use the camera to capture memories."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}